{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PegasusWebContextConnection": "Server=.\\SQLEXPRESS;Database=Pegasus.Web;Trusted_Connection=True;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "ApplicationDbContextConnection": "Server=(localdb)\\mssqllocaldb;Database=Pegasus.Web;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "PegasusWebContextConnection",
          "sinkOptionsSection": {
            "tableName": "LogError",
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00.00.30"
          },
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  }
}